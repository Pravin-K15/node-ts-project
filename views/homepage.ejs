<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./includes/scripts") %>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <table class="table" id="messages-table">
                </table>
            </div>
        </div>
        <form id="chat-login-form">
            <div class="row">
                <div class="col-11"><input id="chat-user-text" class="form-control"></div>
                <div class="col-1"><button type="submit" class="btn btn-primary">Login</button></div>
            </div>
        </form>
        <form id="chat-message-form" class="hide">
            <div class="row">
                <div class="col-12"><select id="chat-friend-list" class="form-control"></select></div>
            </div>
            <div class="row">
                <div class="col-11"><textarea id="chat-message-text" class="form-control" rows="3"></textarea></div>
                <div class="col-1"><button type="submit" class="btn btn-primary">Send</button></div>
            </div>
        </form>
    </div>
</body>

</html>